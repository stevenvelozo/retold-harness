{
    "name": "retold-harness",
    "version": "1.0.5",
    "description": "Restful API harness.  Serves on 8086.",
    "main": "source/Retold-Harness.js",
    "scripts": {
        "start": "node source/Retold-Harness.js",
        "test": "npx mocha -u tdd -R spec",
        "tests": "npx mocha -u tdd --exit -R spec --grep",
        "coverage": "npx nyc --reporter=lcov --reporter=text-lcov npx mocha -- -u tdd -R spec",
        "build": "npx quack build",
		"build-model": "cd source && npx stricture -i model/ddl/BookStore.ddl",
        "docker-dev-build": "docker build ./ -f Dockerfile_LUXURYCode -t retold-harness-image:local",
        "docker-dev-run": "docker run -it -d --name retold-harness-dev -p 20001:8080 -p 8086:8086 -p 31306:3306 -v \"$PWD/.config:/home/coder/.config\"  -v \"$PWD:/home/coder/retold-harness\" -u \"$(id -u):$(id -g)\" -e \"DOCKER_USER=$USER\" retold-harness-image:local",
        "docker-dev-shell": "docker exec -it retold-harness-dev /bin/bash",
        "docker-dev-service-build": "docker build ./ -f Dockerfile_Service -t retold-harness-service-image:local",
        "docker-dev-service-run": "docker run -it --init -d --name retold-harness-dev-service -p 8086:8086 -p 31306:3306 -v \"$(pwd):/retold-harness:z\" retold-harness-service-image:local",
        "docker-dev-service-shell": "docker exec -it retold-harness-dev-service /bin/bash"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stevenvelozo/retold-harness.git"
    },
    "author": "steven velozo <steven@velozo.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/stevenvelozo/retold-harness/issues"
    },
    "homepage": "https://github.com/stevenvelozo/retold-harness#readme",
    "dependencies": {
        "retold-data-service": "file:../retold-data-service"
    },
    "devDependencies": {
        "chai": "^4.3.6",
        "meadow-connection-sqlite": "file:../meadow-connection-sqlite",
        "mocha": "^10.2.0",
        "quackage": "^1.0.45",
        "stricture": "^1.0.37",
        "supertest": "^6.3.3"
    },
    "mocha": {
        "diff": true,
        "extension": [
            "js"
        ],
        "package": "./package.json",
        "reporter": "spec",
        "slow": "75",
        "timeout": "5000",
        "ui": "tdd",
        "watch-files": [
            "source/**/*.js",
            "test/**/*.js"
        ],
        "watch-ignore": [
            "lib/vendor"
        ]
    }
}
